{
    "environment": "production",

    "cache": {

        "dir": "./cache"
    },

    "autoloader": {

        "omit": [
            "TechDivision\\PBC",
            "PHPUnit",
            "PHPParser",
            "Psr\\Log",
            "PHP"
        ]
    },

    "enforcement": {

        "enforce-default-type-safety": true,
        "processing": "exception",
        "level": 15
    },

    "project-dirs": [
        "./../../../tests"
    ]
}
